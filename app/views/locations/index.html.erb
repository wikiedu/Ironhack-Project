<h1 id="model-name">List of locations:</h1>
<div>
  <table class="table table-striped table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th>Edit</th>
      <th>Delete</th>
      <th>Expeditions</th>
      <th>Code</th>
      <th>Name</th>
      <th>Direction</th>
      <th>Code</th>
      <th> Hour In</th>
      <th>Hour Out</th>
      <th>Contact</th>
      <th>route</th>
    </tr>
  </thead>
  <tbody>


    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to 'Edit', edit_client_location_path(@client, location), method: :get %></td>
        <td><%= link_to 'X', client_location_path(@client, location), method: :delete, data: {confirm: "Are you sure?"}%></td>
        <td><%= link_to 'View Exp.', client_expeditions_path(@client, location_id: location.id), method: :get %></td>
        <td><%= location.internal_code %></td>
        <td><%= location.name %></td>
        <td><%= location.direction %></td>
        <td><%= location.postal_code %></td>
        <td><%= location.hour_in %></td>
        <td><%= location.hour_out %></td>
        <td><%= location.contact %></td>
        <td><%= location.route %></td>

      </tr>
    <% end %>
  </tbody>

</div>



<div class="col-md-6">
<h4>Import:</h4>
<%= link_to 'Add new Location', new_client_location_path, method: :get %>
  <%= form_tag import_client_locations_path(@client), multipart: true do %>
    <%= file_field_tag :file%> <%= submit_tag "Import file" %>
    <br>
  <% end %>
  <br>
</div>

<div class="col-md-6">
  <h3>Expeditions:</h3>
  <%= link_to 'See all the expeditions', client_expeditions_path(client_id: @client.id), method: :get %>
  <%= button_to('Go to Clients', clients_path, method: :get, class: 'btn btn-default') %>
</div>
