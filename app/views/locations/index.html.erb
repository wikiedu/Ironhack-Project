<h1>List of locations:</h1>
<div class="div-scroll-table">
  <table class="table table-striped table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th>Edit</th>
      <th>Delete</th>
      <th>Id</th>
      <th>Name</th>
      <th>direction</th>
      <th>Code</th>
      <th> Hour In</th>
      <th>Hour Out</th>
      <th>Contact</th>
      <th>route</th>
    </tr>
  </thead>
  <tbody>


    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to 'Edit', edit_client_location_path(location.client_id, location.id), method: :get %></td>
        <td><%= link_to 'X', client_location_path(location.client_id, location.id), method: :delete %></td>
        <td><%= location.id %></td>
        <td><%= location.name %></td>
        <td><%= location.direction %></td>
        <td><%= location.postalCode %></td>
        <td><%= location.hourIn %></td>
        <td><%= location.hourOut %></td>
        <td><%= location.contact %></td>
        <td><%= location.route %></td>

      </tr>
    <% end %>
  </tbody>

</div>

<%= link_to 'Add new Location', new_client_location_path, method: :get %>
