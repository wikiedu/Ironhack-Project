<h1 id="model-name">List of Expeditions:</h1>
<div>
  <table class="table table-striped table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th>View</th>
      <th>Edit</th>
      <th>Delete</th>
      <th>QR Generate</th>
      <th>Origin Location</th>
      <th>Destination Location</th>
      <th>Date</th>
      <th>Weight</th>
      <th>State</th>
    </tr>
  </thead>
  <tbody>


    <% @expeditions.each do |expedition| %>
      <tr>
        <td><%= link_to 'View', client_expedition_path(@client, expedition.id), method: :get %></td>
        <td><%= link_to 'Edit', edit_client_expedition_path(@client, expedition.id), method: :get %></td>
        <td><%= link_to 'X', client_expedition_path(@client, expedition.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
        <td class="qr-generation"><%= link_to('QR', client_expedition_print_path(@client, expedition.id), method: :get, target: "_blank") %></td>
        <td><%= @client.locations.find_by(id: expedition.origin_location_id).name %></td>
        <td><%= @client.locations.find_by(id: expedition.destination_location_id).name %></td>
        <td><%= expedition.date %></td>
        <td><%= expedition.weight %></td>
        <td><%= expedition.state %></td>

      </tr>
    <% end %>
  </tbody>

</div>



<div class="col-md-6">
<h4>Import:</h4>
<%= link_to 'Add new Expedition', new_client_expedition_path(@client), method: :get %>
  <%= form_tag import_client_expeditions_path(@client), multipart: true do %>
    <%= file_field_tag :file%> <%= submit_tag "Import file" %>
    <br>
  <% end %>
  <br>
</div>

<div class="col-md-6">

  <%= link_to('Print QR Expeditions', client_print_path(@client), method: :get, target: "_blank", class: 'btn btn-default') %>
  <br>
  <%= button_to('Go to Locations', client_locations_path(@client), method: :get, class: 'btn btn-default') %>
</div>
